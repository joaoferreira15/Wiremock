{
  "priority": 3,
  "request": {
    "method": "POST",
    "url": "/SMSExpressSubmit",
    "headers": {
      "Content-Type": {
        "equalTo": "text/xml"
      }
    },
    "bodyPatterns": [
      {
        "matchesXPath": {
          "expression": "//*[local-name()='MultiSmsWS']/*[local-name()='message']/text()",
          "matches": "^.+$"
        }
      },
      {
        "matchesXPath": {
          "expression": "//*[local-name()='MultiSmsWS']/*[local-name()='recipients']/*[local-name()='string']/text()",
          "matches": "^.+$"
        }
      },
      {
        "matchesXPath": {
          "expression": "//*[local-name()='MultiSmsWS']/*[local-name()='sender']/text()",
          "matches": "^.+$"
        }
      },
      {
        "matchesXPath": {
          "expression": "//*[local-name()='MultiSmsWS']/*[local-name()='validity']/text()",
          "matches": "^[0-9]{1,3}$"
        }
      },
      {
        "matchesXPath": {
          "expression": "//*[local-name()='MultiSmsWS']/*[local-name()='notification']/text()",
          "matches": "^(true|false)$"
        }
      },
      {
        "matchesXPath": {
          "expression": "//*[local-name()='MultiSmsWS']/*[local-name()='deliveryDate']/text()",
          "matches": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}$"
        }
      },
      {
        "matchesXPath": {
          "expression": "//*[local-name()='MultiSmsWS']/*[local-name()='infoSearch']/text()",
          "matches": "^InfoSearchValue$"
        }
      },
      {
        "matchesXPath": {
          "expression": "//*[local-name()='MultiSmsWS']/*[local-name()='gateway']/text()",
          "matches": "^GatewayValue$"
        }
      }
    ]
  },
  "response": {
    "status": 200,
    "body": "<soapenv:Envelope xmlns:soapenv='http://schemas.xmlsoap.org/soap/envelope/' xmlns:ns='http://www.themindelectric.com/package/com.mobicomp.mmh.sms.webservice.server/'><soapenv:Header/><soapenv:Body><ns:MultiSmsStatusWS><ns:Status>true</ns:Status><ns:Message>Operation successful</ns:Message><ns:SentCount>100</ns:SentCount><ns:FailedCount>0</ns:FailedCount></ns:MultiSmsStatusWS></soapenv:Body></soapenv:Envelope>",
    "headers": {
      "Content-Type": "text/xml; charset=utf-8"
    }
  }
}
